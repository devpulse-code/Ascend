<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <!-- Onboarding -->
    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.abyssinia.dev.ascend.ui.onboarding.OnboardingFragment"
        android:label="Onboarding"
        tools:layout="@layout/fragment_onboarding">
        <action
            android:id="@+id/action_onboardingFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <!-- Home screen -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.abyssinia.dev.ascend.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_addEditHabitFragment"
            app:destination="@id/addEditHabitFragment" />
        <action
            android:id="@+id/action_homeFragment_to_addEditTaskFragment"
            app:destination="@id/addEditTaskFragment" />
        <action
            android:id="@+id/action_homeFragment_to_habitCalendarFragment"
            app:destination="@id/habitCalendarFragment" />
        <action
            android:id="@+id/action_homeFragment_to_habitListFragment"
            app:destination="@id/habitListFragment" />
        <action
            android:id="@+id/action_homeFragment_to_taskListFragment"
            app:destination="@id/taskListFragment" />
        <action
            android:id="@+id/action_homeFragment_to_todayHabitFragment"
            app:destination="@id/todayHabitFragment" />
        <action
            android:id="@+id/action_homeFragment_to_todayTaskFragment"
            app:destination="@id/todayTaskFragment" />
        <action
            android:id="@+id/action_homeFragment_to_searchResultsFragment"
            app:destination="@id/searchResultsFragment">
            <argument
                android:name="query"
                app:argType="string" />
        </action>
    </fragment>

    <!-- Habit List -->
    <fragment
        android:id="@+id/habitListFragment"
        android:name="com.abyssinia.dev.ascend.ui.habit.HabitListFragment"
        android:label="Habits"
        tools:layout="@layout/fragment_habit_list">
        <action
            android:id="@+id/action_habitListFragment_to_addEditHabitFragment"
            app:destination="@id/addEditHabitFragment" />
        <action
            android:id="@+id/action_habitListFragment_to_habitCalendarFragment"
            app:destination="@id/habitCalendarFragment" />
    </fragment>

    <!-- Add/Edit Habit -->
    <fragment
        android:id="@+id/addEditHabitFragment"
        android:name="com.abyssinia.dev.ascend.ui.habit.AddEditHabitFragment"
        android:label="Add/Edit Habit"
        tools:layout="@layout/fragment_add_edit_habit">
        <argument
            android:name="habitId"
            app:argType="long"
            android:defaultValue="-1L" />
    </fragment>

    <!-- Search Results -->
    <fragment
        android:id="@+id/searchResultsFragment"
        android:name="com.abyssinia.dev.ascend.ui.home.SearchResultsFragment"
        android:label="Search Results"
        tools:layout="@layout/fragment_search_results">
        <argument
            android:name="query"
            app:argType="string"
            android:defaultValue="" />
    </fragment>

    <!-- Task List -->
    <fragment
        android:id="@+id/taskListFragment"
        android:name="com.abyssinia.dev.ascend.ui.task.TaskListFragment"
        android:label="Tasks"
        tools:layout="@layout/fragment_task_list">
        <action
            android:id="@+id/action_taskListFragment_to_addEditTaskFragment"
            app:destination="@id/addEditTaskFragment" />
    </fragment>

    <!-- Add/Edit Task -->
    <fragment
        android:id="@+id/addEditTaskFragment"
        android:name="com.abyssinia.dev.ascend.ui.task.AddEditTaskFragment"
        android:label="Add/Edit Task"
        tools:layout="@layout/fragment_add_edit_task">
        <argument
            android:name="taskId"
            app:argType="long"
            android:defaultValue="-1L" />
    </fragment>

    <!-- Settings -->
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.abyssinia.dev.ascend.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

    <!-- Habit Calendar -->
    <fragment
        android:id="@+id/habitCalendarFragment"
        android:name="com.abyssinia.dev.ascend.ui.habit.HabitCalendarFragment"
        android:label="Habit Calendar">
        <argument
            android:name="habitId"
            app:argType="long"
            android:defaultValue="-1L" />
    </fragment>

    <!-- Today Habit -->
    <fragment
        android:id="@+id/todayHabitFragment"
        android:name="com.abyssinia.dev.ascend.ui.habit.TodayHabitFragment"
        android:label="Today Habits"
        tools:layout="@layout/fragment_today_habit" />

    <!-- Today Task -->
    <fragment
        android:id="@+id/todayTaskFragment"
        android:name="com.abyssinia.dev.ascend.ui.task.TodayTaskFragment"
        android:label="Today Tasks"
        tools:layout="@layout/fragment_today_task" />

</navigation>
